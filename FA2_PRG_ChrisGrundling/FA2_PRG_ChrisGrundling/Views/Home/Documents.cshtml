    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h1 class="site-heading text-center text-white d-none d-lg-block">
        <span class="site-heading-upper text-primary mb-3">Key Documents</span>
        <span class="site-heading-lower">of City of Johannesburg</span>
</h1>

<section class="page-section">
    <div class="container">
      <div class="product-item">
        <div class="product-item-title d-flex">
          <div class="bg-faded p-5 d-flex ml-auto rounded">
            <h2 class="section-heading mb-0">
              <span class="section-heading-upper">City of Johannesburg</span>
              <span class="section-heading-lower">Integrated Development Plan</span>
            </h2>
          </div>
        </div>
        <img class="product-item-img mx-auto d-flex rounded img-fluid mb-3 mb-lg-0" src="../img/products-01.jpg" alt="123">
        <div class="product-item-description d-flex mr-auto">
          <div class="bg-faded p-5 rounded">
            <p class="mb-0">Every municipality in South Africa is required to produce an Integrated Development Plan, in which the city's
              future is mapped over the short, medium and long-term. Issues that are considered include spatial planning, disaster management, 
              finances, performance targets and economic development.
              The key to the process is "integration" -- meaning that all processes are considered in relation to one another.
              Johannesburg's IDP is available for downloading from this website, in Adobe Acrobat format, with each chapter in a separate file.</p>
                    <div class="intro-button mx-auto">
                      <a class="btn btn-primary btn-m" href="https://www.joburg.org.za/documents_/Documents/Joburg%20IDP%2020/Final%202020-21%20IDP.pdf">Read More</a>
                    </div>
            </div>
        </div>
      </div>
    </div>
  </section>

